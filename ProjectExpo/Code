available_languages = {
    'English': 'en', 'Hindi': 'hi', 'Bengali': 'bn', 'Marathi': 'mr', 'Telugu': 'te',
    'Tamil': 'ta', 'Gujarati': 'gu', 'Kannada': 'kn', 'Malayalam': 'ml', 'Odia': 'or'
